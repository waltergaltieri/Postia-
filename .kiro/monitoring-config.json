{
  "monitoring": {
    "version": "1.0.0",
    "lastUpdated": "2025-09-19",
    "description": "Continuous monitoring configuration for style quality and accessibility",
    
    "schedules": {
      "accessibility": {
        "frequency": "on-commit",
        "critical": true,
        "script": "monitor:accessibility",
        "failOnError": true
      },
      "visualRegression": {
        "frequency": "daily",
        "critical": false,
        "script": "monitor:visual-regression",
        "failOnError": false
      },
      "ciChecks": {
        "frequency": "on-pr",
        "critical": true,
        "script": "ci:style-checks",
        "failOnError": true
      }
    },
    
    "thresholds": {
      "accessibility": {
        "contrastRatio": 4.5,
        "keyboardNavigation": 100,
        "maxCriticalViolations": 0,
        "maxSeriousViolations": 0,
        "maxModerateViolations": 2,
        "maxMinorViolations": 5
      },
      "visualRegression": {
        "maxPixelDifference": 0.1,
        "maxLayoutShift": 0.02,
        "maxColorVariance": 5,
        "componentConsistency": 95,
        "spacingCompliance": 95
      },
      "performance": {
        "lighthouseAccessibility": 95,
        "maxRenderTime": 100,
        "maxCLS": 0.1
      }
    },
    
    "notifications": {
      "slack": {
        "enabled": false,
        "webhook": "",
        "channels": {
          "critical": "#dev-alerts",
          "warnings": "#dev-notifications"
        }
      },
      "email": {
        "enabled": false,
        "recipients": [],
        "onlyForCritical": true
      },
      "github": {
        "enabled": true,
        "createIssues": false,
        "commentOnPR": true
      }
    },
    
    "reports": {
      "retention": {
        "days": 30,
        "maxFiles": 100
      },
      "formats": ["json", "markdown"],
      "locations": {
        "reports": "audit-reports/",
        "baselines": "visual-baselines/",
        "artifacts": "monitoring-artifacts/"
      }
    },
    
    "integrations": {
      "githubActions": {
        "enabled": true,
        "workflowFile": ".github/workflows/style-quality-checks.yml",
        "runOn": ["push", "pull_request"],
        "paths": [
          "src/**/*.css",
          "src/**/*.tsx",
          "src/**/*.ts",
          "src/styles/**/*",
          "src/components/**/*"
        ]
      },
      "lighthouse": {
        "enabled": true,
        "configFile": "lighthouse.config.js",
        "runs": 3,
        "categories": ["accessibility", "performance"]
      },
      "storybook": {
        "enabled": true,
        "addon": "@storybook/addon-a11y",
        "testRunner": true
      }
    },
    
    "tools": {
      "axeCore": {
        "version": "^4.10.0",
        "rules": {
          "color-contrast": "error",
          "keyboard": "error",
          "focus-order-semantics": "error",
          "aria-valid-attr": "error"
        }
      },
      "playwright": {
        "version": "^1.55.0",
        "browsers": ["chromium", "firefox", "webkit"],
        "devices": ["Desktop Chrome", "iPhone 12", "iPad"]
      },
      "lighthouse": {
        "version": "^10.0.0",
        "preset": "desktop",
        "throttling": "simulated3G"
      }
    },
    
    "maintenance": {
      "baselineUpdate": {
        "frequency": "weekly",
        "automatic": false,
        "requiresApproval": true
      },
      "configReview": {
        "frequency": "monthly",
        "assignee": "tech-lead"
      },
      "toolUpdates": {
        "frequency": "quarterly",
        "autoUpdate": false
      }
    }
  },
  
  "documentation": {
    "guides": [
      "docs/ui-review-checklist.md",
      "docs/style-guide-updated.md",
      "audit-reports/comprehensive-style-fixes-documentation.md"
    ],
    "runbooks": [
      "How to run monitoring scripts",
      "How to interpret reports",
      "How to fix common issues",
      "How to update baselines"
    ],
    "contacts": {
      "techLead": "tech-lead@postia.com",
      "accessibility": "accessibility@postia.com",
      "design": "design@postia.com"
    }
  },
  
  "troubleshooting": {
    "commonIssues": {
      "contrastFailures": {
        "description": "Color contrast below WCAG AA standards",
        "solution": "Update colors using variables from src/styles/themes.css",
        "prevention": "Use contrast validation tools during development"
      },
      "keyboardNavigation": {
        "description": "Elements not accessible via keyboard",
        "solution": "Add proper tabindex and focus states",
        "prevention": "Test with keyboard navigation during development"
      },
      "visualRegressions": {
        "description": "Unintended visual changes detected",
        "solution": "Review changes and update baselines if intentional",
        "prevention": "Run visual regression tests before commits"
      },
      "responsiveIssues": {
        "description": "Layout breaks on different screen sizes",
        "solution": "Use responsive utilities and test on multiple devices",
        "prevention": "Follow mobile-first development approach"
      }
    },
    
    "escalation": {
      "level1": "Developer fixes issue locally",
      "level2": "Team lead reviews and provides guidance",
      "level3": "Architecture review for systemic issues",
      "level4": "External accessibility consultant if needed"
    }
  }
}