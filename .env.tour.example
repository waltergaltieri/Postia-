# Tour System Environment Configuration
# Copy this file to .env.local and configure for your environment

# =============================================================================
# TOUR SYSTEM CONFIGURATION
# =============================================================================

# Enable/disable the entire tour system
NEXT_PUBLIC_TOURS_ENABLED=true

# Environment (development, staging, production)
NEXT_PUBLIC_TOUR_ENVIRONMENT=development

# Auto-start tours for new users
NEXT_PUBLIC_TOURS_AUTO_START=true

# Debug mode (shows debug panel and verbose logging)
NEXT_PUBLIC_TOUR_DEBUG_MODE=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core tour features
NEXT_PUBLIC_WELCOME_TOUR_ENABLED=true
NEXT_PUBLIC_CONTENT_GENERATION_TOUR_ENABLED=true
NEXT_PUBLIC_CAMPAIGN_MANAGEMENT_TOUR_ENABLED=true
NEXT_PUBLIC_ADMIN_FEATURES_TOUR_ENABLED=true

# Advanced features
NEXT_PUBLIC_CONTEXTUAL_TOURS_ENABLED=false
NEXT_PUBLIC_INTELLIGENT_SUGGESTIONS_ENABLED=false
NEXT_PUBLIC_TOUR_PERSONALIZATION_ENABLED=false

# Mobile optimizations
NEXT_PUBLIC_MOBILE_OPTIMIZED_TOURS_ENABLED=true

# Accessibility features
NEXT_PUBLIC_ENHANCED_ACCESSIBILITY_ENABLED=true
NEXT_PUBLIC_HIGH_CONTRAST_TOURS_ENABLED=true

# Performance features
NEXT_PUBLIC_TOUR_PRELOADING_ENABLED=true
NEXT_PUBLIC_TOUR_LAZY_LOADING_ENABLED=true

# =============================================================================
# ROLLOUT CONFIGURATION
# =============================================================================

# Rollout strategy (immediate, gradual, canary, blue_green)
NEXT_PUBLIC_TOUR_ROLLOUT_STRATEGY=immediate

# Rollout percentage (0-100)
NEXT_PUBLIC_TOUR_ROLLOUT_PERCENTAGE=100

# Rollout duration in hours
NEXT_PUBLIC_TOUR_ROLLOUT_DURATION=24

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Maximum concurrent tours
NEXT_PUBLIC_MAX_CONCURRENT_TOURS=1

# Tour timeout in milliseconds
NEXT_PUBLIC_TOUR_TIMEOUT=900000

# Preload delay in milliseconds
NEXT_PUBLIC_TOUR_PRELOAD_DELAY=2000

# Cache strategy (memory, localStorage, sessionStorage)
NEXT_PUBLIC_TOUR_CACHE_STRATEGY=localStorage

# Bundle optimization
NEXT_PUBLIC_TOUR_BUNDLE_OPTIMIZATION=true

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================

# Enable tour analytics
NEXT_PUBLIC_TOUR_ANALYTICS_ENABLED=true

# Analytics provider (internal, google_analytics, mixpanel, amplitude)
NEXT_PUBLIC_TOUR_ANALYTICS_PROVIDER=internal

# Analytics retention in days
NEXT_PUBLIC_TOUR_ANALYTICS_RETENTION=30

# Track performance metrics
NEXT_PUBLIC_TOUR_PERFORMANCE_TRACKING=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Enable monitoring
NEXT_PUBLIC_TOUR_MONITORING_ENABLED=true

# Error tracking
NEXT_PUBLIC_TOUR_ERROR_TRACKING=true

# Performance monitoring
NEXT_PUBLIC_TOUR_PERFORMANCE_MONITORING=true

# User feedback collection
NEXT_PUBLIC_TOUR_FEEDBACK_COLLECTION=true

# Alert thresholds
NEXT_PUBLIC_TOUR_ERROR_RATE_THRESHOLD=0.05
NEXT_PUBLIC_TOUR_COMPLETION_RATE_THRESHOLD=0.6
NEXT_PUBLIC_TOUR_DURATION_THRESHOLD=300

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Google Analytics (if using GA for tour analytics)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Mixpanel (if using Mixpanel for tour analytics)
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Amplitude (if using Amplitude for tour analytics)
NEXT_PUBLIC_AMPLITUDE_API_KEY=

# Sentry (for error tracking)
NEXT_PUBLIC_SENTRY_DSN=

# =============================================================================
# A/B TESTING
# =============================================================================

# Enable A/B testing for tours
NEXT_PUBLIC_TOUR_AB_TESTING_ENABLED=false

# A/B test variant (A or B)
NEXT_PUBLIC_TOUR_VARIANT=A

# A/B test split percentage
NEXT_PUBLIC_TOUR_AB_SPLIT_PERCENTAGE=50

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Show tour debug panel in development
NEXT_PUBLIC_TOUR_DEBUG_PANEL=true

# Enable tour hot reloading
NEXT_PUBLIC_TOUR_HOT_RELOAD=true

# Mock analytics in development
NEXT_PUBLIC_TOUR_MOCK_ANALYTICS=true

# Skip tour conditions in development
NEXT_PUBLIC_TOUR_SKIP_CONDITIONS=false

# =============================================================================
# STAGING CONFIGURATION
# =============================================================================

# Staging-specific overrides
# NEXT_PUBLIC_TOUR_ROLLOUT_PERCENTAGE=50
# NEXT_PUBLIC_CONTEXTUAL_TOURS_ENABLED=true
# NEXT_PUBLIC_TOUR_ANALYTICS_PROVIDER=internal

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production-specific overrides
# NEXT_PUBLIC_TOUR_DEBUG_MODE=false
# NEXT_PUBLIC_TOUR_DEBUG_PANEL=false
# NEXT_PUBLIC_TOUR_ROLLOUT_STRATEGY=canary
# NEXT_PUBLIC_TOUR_ROLLOUT_PERCENTAGE=10
# NEXT_PUBLIC_TOUR_ANALYTICS_PROVIDER=google_analytics
# NEXT_PUBLIC_TOUR_FEEDBACK_COLLECTION=false